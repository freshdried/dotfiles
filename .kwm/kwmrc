kwmc rule owner="Finder" properties={float="true"}
kwmc rule owner="iTerm2" properties={role="AXDialog"}
kwmc rule owner="Emacs" properties={role="AXStandardWindow"}

kwmc config padding 60 40 40 40
kwmc config gap 15 15

kwmc config tiling bsp

kwmc config hotkeys on

kwmc config float-non-resizable on

kwmc config lock-to-container on

kwmc config focus-follows-mouse on
kwmc config standby-on-float on
kwmc config mouse-follows-focus on

kwmc config cycle-focus on
kwmc config split-ratio 0.5
kwmc config spawn right



// Enable border for focused window
kwmc config border focused on
kwmc config border focused size 2
kwmc config border focused color 0xFFBDD322
kwmc config border focused radius 6

// Enable border for marked window
kwmc config border marked on
kwmc config border marked radius 6

// Enable the prefix mode
kwmc mode prefix prefix on
kwmc mode prefix timeout 0.75
kwmc mode prefix restore default
kwmc mode prefix color 0xFF458588

/*  Default Keybinds */
// Activate prefix mode
kwmc bindsym ctrl-s mode activate prefix

// Quit Kwm
kwmc bindsym cmd+shift-q quit

kwmc bindsym cmd+shift-m space -t monocle
kwmc bindsym cmd+shift-b space -t bsp
kwmc bindsym cmd-` exec sh -c /Users/slee2/.bin/rotate-tiling

// Set Space Tiling Mode To Floating
kwmc bindsym cmd+shift-f space -t float

// Toggle Tiling
kwm bindsym cmd-y window -t float

// Modify Container
kwmc bindsym cmd+shift-, window -c reduce 0.05
kwmc bindsym cmd+shift-. window -c expand 0.05

// Give Focus To Window
kwmc bindsym cmd-h window -f west
kwmc bindsym cmd-l window -f east
kwmc bindsym cmd-j window -f south
kwmc bindsym cmd-k window -f north

// scratchpad
kwmc bindsym cmd+ctrl+alt+shift-a scratchpad add
kwmc bindsym cmd+ctrl+alt+shift-r scratchpad remove

kwmc bindsym -f1 scratchpad toggle 0
// kwmc bindsym -f2 scratchpad toggle 1

// Swap Focused Window
kwmc bindsym cmd+shift-h window -s west
kwmc bindsym cmd+shift-j window -s south
kwmc bindsym cmd+shift-k window -s north
kwmc bindsym cmd+shift-l window -s east
